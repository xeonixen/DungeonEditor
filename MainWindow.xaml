<Window x:Class="DungeonEditorV2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DungeonEditorV2"
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1024">
    <!--<ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible">-->
    <Grid>
        <Menu>
            <MenuItem Header="_File">
                <MenuItem Header="_Open Room" Click="MenuOpenRoomClick" />
                <MenuItem Header="_Quit" Click="MenuQuitClick"></MenuItem>
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="_Room Editor" Click="MenuRoomEditorClick"></MenuItem>
            </MenuItem>
            
        </Menu>
        <Canvas x:Name="BaseCanvas"  Margin="0,30,0,0"/>
    </Grid>
    <!--</ScrollViewer>-->



</Window>
